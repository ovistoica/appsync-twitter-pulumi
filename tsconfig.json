{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": [
      "es2017",
      "es2019",
      "es2020",
      "DOM"
    ],
    "declaration": false,
    "rootDir": "./",
    "outDir": ".bin",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts",
    "index.ts",
    "resources/**/*.ts"
  ]
}
